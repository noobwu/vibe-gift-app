/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 160rpx;
}

.header {
  background: linear-gradient(135deg, #1989fa 0%, #1c6bd9 100%);
  padding: 60rpx 32rpx 80rpx;
  border-radius: 0 0 48rpx 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(25, 137, 250, 0.15);
}

.header-icon {
  font-size: 96rpx;
  margin-bottom: 20rpx;
  filter: drop-shadow(0 8rpx 20rpx rgba(0, 0, 0, 0.2));
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.header .title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.header .subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 300;
}

.form-card,
.results-card {
  background: #fff;
  border-radius: 28rpx;
  padding: 48rpx 32rpx;
  margin: -40rpx 32rpx 0;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.form-section {
  margin-bottom: 36rpx;
}

.form-section:last-child {
  margin-bottom: 24rpx;
}

.section-title {
  display: block;
  font-size: 30rpx;
  color: #323233;
  margin-bottom: 10rpx;
  font-weight: 600;
  position: relative;
  padding-left: 12rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 20rpx;
  background: linear-gradient(135deg, #1989fa 0%, #1c6bd9 100%);
  border-radius: 2rpx;
}

.gender-options {
  display: flex;
  gap: 16rpx;
}

.gender-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 18rpx 12rpx;
  border: 2rpx solid #ebedf0;
  border-radius: 20rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  background: #fff;
  position: relative;
  overflow: hidden;
}

.gender-option:active {
  transform: scale(0.98);
}

.gender-option.active {
  border-color: #1989fa;
  background: linear-gradient(135deg, rgba(25, 137, 250, 0.08) 0%, rgba(28, 107, 217, 0.05) 100%);
  box-shadow: 0 6rpx 20rpx rgba(25, 137, 250, 0.2);
}

.gender-icon {
  font-size: 52rpx;
  margin-bottom: 6rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.gender-option.active .gender-icon {
  transform: scale(1.1);
  filter: drop-shadow(0 6rpx 12rpx rgba(25, 137, 250, 0.3));
}

.gender-text {
  font-size: 26rpx;
  color: #323233;
  font-weight: 500;
}

.gender-option.active .gender-text {
  color: #1989fa;
}

.input {
  background: linear-gradient(135deg, #f7f8fa 0%, #f2f3f5 100%) !important;
  border-radius: 24rpx !important;
  font-size: 28rpx;
  border: 2rpx solid transparent !important;
}

.tip {
  display: block;
  font-size: 24rpx;
  color: #969799;
  margin-top: 4rpx;
}

.budget-inputs {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.budget-input {
  flex: 1;
  background: linear-gradient(135deg, #f7f8fa 0%, #f2f3f5 100%) !important;
  border-radius: 24rpx !important;
  font-size: 28rpx;
  text-align: center;
  border: 2rpx solid transparent !important;
}

.budget-separator {
  font-size: 32rpx;
  color: #c8c9cc;
  font-weight: 500;
}

.submit-section {
  margin-top: 28rpx;
  padding: 0 16rpx;
}

.results-header {
  text-align: center;
  margin-bottom: 36rpx;
  padding-bottom: 28rpx;
  border-bottom: 1rpx solid #ebedf0;
}

.results-title {
  display: block;
  font-size: 34rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 14rpx;
}

.results-subtitle {
  display: block;
  font-size: 24rpx;
  color: #969799;
  background: #f7f8fa;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.recommendations {
  margin-bottom: 24rpx;
}

.recommendation-item {
  display: flex;
  align-items: center;
  padding: 20rpx 16rpx;
  margin-bottom: 16rpx;
  background: linear-gradient(135deg, #f0f8ff 0%, #f5f9ff 100%);
  border-radius: 20rpx;
  border-left: 4rpx solid #1989fa;
  box-shadow: 0 4rpx 16rpx rgba(25, 137, 250, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.recommendation-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(25, 137, 250, 0.08);
}

.recommendation-item:last-child {
  margin-bottom: 0;
}

.item-number {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #1989fa 0%, #1c6bd9 100%);
  color: #fff;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 16rpx;
  flex-shrink: 0;
  box-shadow: 0 6rpx 16rpx rgba(25, 137, 250, 0.35);
  position: relative;
  z-index: 1;
}

.item-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 16rpx;
}

.item-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #323233;
}

.results-actions {
  padding-top: 32rpx;
  border-top: 1rpx solid #ebedf0;
}

.reset-btn {
  margin-top: 24rpx !important;
}

.settings-entry {
  position: fixed;
  bottom: 48rpx;
  right: 32rpx;
  background: #1989fa;
  padding: 24rpx 40rpx;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 24rpx rgba(25, 137, 250, 0.4);
  display: flex;
  align-items: center;
  gap: 8rpx;
  transition: all 0.3s ease;
}

.settings-entry:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(25, 137, 250, 0.3);
}

.settings-text {
  font-size: 28rpx;
  color: #fff;
  font-weight: 600;
}
